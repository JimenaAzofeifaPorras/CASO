@model CASO.Entities.EstudianteEnt

@{
    ViewBag.Title = "Matricular1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/template/images/logo.svg" alt="logo">
                </div>

                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-info" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("Matricular1", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Fecha, new { @class = "form-control form-control-lg", @type = "text", placeholder = "Fecha" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg", @type = "text", placeholder = "Nombre" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Monto, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Monto" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.TipoCurso, ViewBag.TiposCursos as List<SelectListItem>, new { @class = "form-control form-control-lg", @type = "password", placeholder = "TipoCurso" })
                    </div>

                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="REGISTRARSE">
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        ¿Ya tienes una cuenta? <a href="@Url.Action("Index","Login")" class="text-primary">Iniciar Sesión</a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
